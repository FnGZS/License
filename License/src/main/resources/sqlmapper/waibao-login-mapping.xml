<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.waibao.dao.waibao.WaibaoDao">
<resultMap id="BaseResultMap" type="com.waibao.dao.waibao.dataobject.WaibaoLoginDO" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="head_img" property="headImg" jdbcType="VARCHAR" />
    <result column="email" property="email" jdbcType="VARCHAR" />
</resultMap>
 <select id="getUser" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    id, user_name, password,head_img,email 
    from waibao_login
    where user_name = #{userName,jdbcType=VARCHAR}
  </select>
  <insert id="waibaoRegister" parameterType="com.waibao.dao.waibao.dataobject.WaibaoRegisterDO" >
    insert into waibao_login 
    (
    	user_name, password, email ,head_img,gmt_created,gmt_modified
    )
    values 
    (
    	#{userName,jdbcType=VARCHAR}, 
    	#{password,jdbcType=VARCHAR}, 
    	#{email,jdbcType=VARCHAR}, 
    	#{headImg,jdbcType=VARCHAR}, 
    	NOW(),
		NOW()
	)
  </insert>
</mapper>